{
	"name": "realmexchange",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "npm run build && wrangler pages dev --persist-to=../.wrangler",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit generate && drizzle-kit migrate && wrangler d1 migrations apply realm-exchange --local --persist-to=../.wrangler",
		"db:studio": "drizzle-kit studio",
		"db:seed:wrangler": "chmod +x ./test/seed-wrangler.sh && ./test/seed-wrangler.sh",
		"deploy": "npm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types src/worker-configuration.d.ts"
	},
	"devDependencies": {
		"@libsql/client": "^0.15.15",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22.19.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"drizzle-seed": "^0.3.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.13",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"wrangler": "^4.46.0"
	}
}
